# Security
# WARNING: Change this to a long random secret in production!
SECURITY_KEY="change_me_in_production"

# Database - Local SQLite for development
# For Docker, these are typically overridden in docker-compose.yml
SQLALCHEMY_DATABASE_URI="sqlite:///api-analytics.db"
ASYNC_SQLALCHEMY_DATABASE_URI="sqlite+aiosqlite:///api-analytics.db"

# Redis - Local for development
REDIS_URL="redis://localhost:6379/0"

# PostgreSQL Configuration (used by Docker Compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=api_analytics

# Connectivity
BACKEND_CORS_ORIGINS="http://localhost,http://localhost:5173,https://localhost,https://localhost:5173"
TRUSTED_HOSTS="localhost"
